@model Producto
<body style="background-color: #B9B9B9;">  
<div class="text-center" style="margin-top: 50px;">
    <h1 class="p-3 mb-2 bg-info text-white" class="display-4">Agregar Productos:</h1>
</div>

<div  class="container">

<div asp-validation-summary="All"></div>

<form action="" method="post">  
    
  <div class="form-group">
    <label for="">Nombre del producto: </label>
    <input type="text" asp-for="nombre" class="form-control" id=""  placeholder="Ingrese Nombre">
  </div>

  <div class="form-group">
    <label for="">URL del Producto:</label>
    <input type="text" asp-for="url_producto" class="form-control" id=""  placeholder="Ingrese URL de imagen">
  </div>

  <div class="form-group">
    <label for="">Descripción del Producto:</label>
    <input type="text" asp-for="descripcion" class="form-control" id=""  placeholder="Ingrese Descripcion">
  </div>

  <div class="form-group">
    <label for="">Precio:</label>
    <input type="text" asp-for="precio" class="form-control" id=""  placeholder="Ingrese Precio">
    
  </div>
  <div class="form-group">
    <label for="">Celular de Contacto: </label>
    <input type="tel" asp-for="celular" class="form-control" id=""  placeholder="Ingrese Número de Celular">
  </div>

  <div class="form-group">
    <label for="">Lugar de compra del producto: </label>
    <input type="text" asp-for="lugarcompraproducto" class="form-control" id=""  placeholder="Ingrese Lugar de Compra">
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Nombre del comprador: </label>
    <input type="text" asp-for="usuario" class="form-control" id=""  placeholder="Ingrese usuario">
  </div>
  <div style="text-align: center; margin-top: 15px; margin-bottom: 15px;">
            <button type="submit" class="btn btn-dark">Registraar</button>
  </div>
</form>
</div>
</body>